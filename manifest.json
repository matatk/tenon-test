{
	"name": "Tenon Test",
	"description": "Tests current page (via URL or DOM) in the Tenon accessibility testing tool",
	"author": "Matthew Tylee Atkinson",
	"homepage_url": "https://github.com/matatk/tenon-test/",
	"version": "0.1.0",
	"permissions": [
		"activeTab", "tabs", "http://*/*", "https://*/*", "storage"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Test this page with Tenon.io",
		"default_icon": "assets/icon19.png"
	},
	"content_scripts": [{
		"matches": ["*://*/*"],
		"js": ["content.js"]
	}],
	"icons": {
		"16": "assets/icon16.png",
		"48": "assets/icon48.png",
		"128": "assets/icon128.png"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"manifest_version": 2
}
