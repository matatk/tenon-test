{
	"manifest_version": 2,
	"name": "Tenon Test",
	"version": "0.1.0",
	"description": "Tests current page (via DOM serialisation) in the Tenon accessibility testing tool",
	"author": "Matthew Tylee Atkinson",
	"homepage_url": "https://github.com/matatk/tenon-test/",

	"permissions": [
		"activeTab", "storage"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["content.js"]
		}
	],

	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}
